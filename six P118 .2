package six.P118;

public interface Book {
    public void info();
}




/**
 * @program: classprogram
 * @Description: read
 * @author: 啦啦啦
 * @date: 2019/11/9
 */

public class Magazine implements Book {
    private int pages;
    private double prices;
    public int cycle;

    public Magazine(int pages, double prices, int cycle) {
        this.pages = pages;
        this.prices = prices;
        this.cycle = cycle;
    }

    @Override
    public void info() {
        System.out.print("This is a Manazine. It have " +pages+ " of pages. It's prices are " +prices+ " yuan. It's cycle is "+cycle+" week");
    }
}





