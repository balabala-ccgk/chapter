public class TextBook implements Book {
    private int pages;
    private double prices;
    public String object;

    public TextBook(int pages, double prices, String object) {
        this.pages = pages;
        this.prices = prices;
        this.object = object;
    }

    @Override
    public void info() {
        System.out.print("This is a TextBook. It have " +pages+ " of pages. It's prices are " +prices+ " yuan. It is suitable for "+object);
    }
}




